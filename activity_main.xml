<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a"
    android:id="@+id/layout"

    tools:context="com.example.prasad.firstweatyahoo.MainActivity"
    android:weightSum="1">
    <EditText
        android:id="@+id/editcity"
        android:layout_marginTop="25dp"
        android:layout_width="100dp"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:hint="Enter City name "/>

    <Button
        android:id="@+id/showbutton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="25dp"
        android:onClick="getWeatherInfo"
        android:background="#ffff"
        android:text="Show" />


    <TextView
        android:id="@+id/txtcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:layout_below="@id/editcity"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#F8F8FF"
        android:textSize="36dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLastUpdate"
        android:text=" "
        android:layout_below="@id/txtcity"
        android:textColor="#F8F8FF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="1500dp"
        android:layout_height="150dp"
        android:layout_below="@id/txtLastUpdate"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/txtCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:gravity="left"
        android:layout_below="@id/imageView"
        android:text="Temperature  :"
        android:textColor="#F8F8FF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Status              :"
        android:layout_below="@id/txtCelsius"
        android:textColor="#F8F8FF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="0.07" />

    <TextView
        android:id="@+id/txtHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Humidity         :"
        android:layout_below="@id/txtDescription"
        android:textColor="#F8F8FF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="0.09" />

    <TextView
        android:id="@+id/txtSunrise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Sunrise            :"
        android:textColor="#F8F8FF"
        android:textSize="30dp"
        android:layout_below="@id/txtHumidity"
        android:textStyle="bold"
        android:layout_weight="0.08" />
    <TextView
        android:id="@+id/txtSunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Sunset             :"
        android:textColor="#F8F8FF"
        android:textSize="30dp"
        android:layout_below="@id/txtSunrise"
        android:textStyle="bold"
        android:layout_weight="0.08" />

</RelativeLayout>